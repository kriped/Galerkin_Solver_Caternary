{
    "configurations": [
      {
        "type": "cppvsdbg",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceFolder}/${input:executableName}.exe",
        "preLaunchTask": "build",
        "cwd": "${workspaceFolder}",
        "stopAtEntry": true
      }
    ],
    "inputs": [
      {
        "type": "promptString",
        "id": "executableName",
        "description": "Enter the name of the executable to debug (without extension)"
      }
    ]
  }