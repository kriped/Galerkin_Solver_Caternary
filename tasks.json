{
    "tasks": [
      {
        "type": "shell",
        "label": "build",
        "command": "g++",
        "args": [
          "main.cpp",
          "-o",
          "${workspaceFolder}/${input:executableName}.exe"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "inputs": [
          {
            "type": "promptString",
            "id": "executableName",
            "description": "Enter the name of the executable to build (without extension)"
          }
        ]
      }
    ]
  }